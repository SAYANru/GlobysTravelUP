<Window x:Class="GlobusTravelManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Globus Travel Manager - Панель управления" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#0078D7" Padding="10">
            <DockPanel>
                <!-- Лого и название -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="🌍" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="GLOBUS TRAVEL MANAGER" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Инфо пользователя -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Пользователь:" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="tbUserName" Text="Гость" 
                               Foreground="White" FontWeight="Bold" 
                               Margin="5,0,20,0" VerticalAlignment="Center"/>

                    <Button Content="Выйти" Padding="10,5" 
                            Background="#FF4444" Foreground="White"
                            FontWeight="Bold" Click="BtnLogout_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Меню -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <Label Content="МЕНЮ" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <Button x:Name="BtnTours" Content="🗺️ Туры" 
                            Height="40" Margin="0,5"
                            Background="Transparent" BorderThickness="0"
                            HorizontalContentAlignment="Left"
                            Click="BtnTours_Click"/>

                    <Button x:Name="BtnBookings" Content="📋 Заявки" 
                            Height="40" Margin="0,5"
                            Background="Transparent" BorderThickness="0"
                            HorizontalContentAlignment="Left"
                            Click="BtnBookings_Click"/>

                    <Button x:Name="BtnBuses" Content="🚌 Автобусы" 
                            Height="40" Margin="0,5"
                            Background="Transparent" BorderThickness="0"
                            HorizontalContentAlignment="Left"
                            Click="BtnBuses_Click"/>

                    <Button x:Name="BtnClients" Content="👥 Клиенты" 
                            Height="40" Margin="0,5"
                            Background="Transparent" BorderThickness="0"
                            HorizontalContentAlignment="Left"
                            Click="BtnClients_Click"/>

                    <Separator Margin="0,20,0,10"/>

                    <Button Content="⚙️ Настройки" 
                            Height="35" Margin="0,5"
                            Background="Transparent" BorderThickness="0"
                            HorizontalContentAlignment="Left"/>

                    <Button Content="📊 Статистика" 
                            Height="35" Margin="0,5"
                            Background="Transparent" BorderThickness="0"
                            HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Рабочая область -->
            <Frame x:Name="MainFrame" Grid.Column="1" 
                   NavigationUIVisibility="Hidden"/>
        </Grid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Background="#EEE">
            <StatusBarItem>
                <TextBlock x:Name="tbStatus" Text="Готово"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Globe Travel Manager v1.0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>