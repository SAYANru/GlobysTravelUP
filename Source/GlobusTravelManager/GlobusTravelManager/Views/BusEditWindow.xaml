<Window x:Class="GlobusTravelManager.Views.BusEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование автобуса" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Label Grid.Row="0" Content="🚌 Редактирование типа автобуса" 
               FontSize="16" FontWeight="Bold" 
               Margin="0,0,0,20"/>

        <!-- Форма -->
        <StackPanel Grid.Row="1" Margin="10">
            <StackPanel>
                <Label Content="Название типа:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtName" Height="30"/>
            </StackPanel>

            <StackPanel>
                <Label Content="Описание:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtDescription" Height="60" 
                         AcceptsReturn="True" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel>
                <Label Content="Вместимость (человек):" FontWeight="SemiBold"/>
                <TextBox x:Name="txtCapacity" Height="30" Text="20"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Width="100" Height="35" 
                    Click="BtnCancel_Click"/>
            <Button Content="Сохранить" Width="100" Height="35" Margin="10,0,0,0"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="Bold" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>