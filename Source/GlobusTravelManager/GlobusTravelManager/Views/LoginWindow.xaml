<Window x:Class="GlobusTravelManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Globe Travel" 
        Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#F0F8FF">
        <Border CornerRadius="10" Background="White" 
                BorderBrush="#0078D7" BorderThickness="2"
                Margin="40" Padding="20">
            <StackPanel>
                <!-- Заголовок -->
                <Label Content="Globe Travel Manager" 
                       FontSize="22" FontWeight="Bold" 
                       Foreground="#0078D7"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                <!-- Логин -->
                <Label Content="Логин:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtLogin" Height="30" Margin="0,5,0,10"/>

                <!-- Пароль -->
                <Label Content="Пароль:" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,20"/>

                <!-- Кнопки -->
                <Button x:Name="btnLogin" Content="Войти" 
                        Height="35" FontSize="14" FontWeight="Bold"
                        Background="#0078D7" Foreground="White"
                        Click="BtnLogin_Click"/>

                <Button Content="Войти как гость" 
                        Height="30" Margin="0,10,0,5"
                        Background="Transparent" BorderBrush="#0078D7"
                        Foreground="#0078D7"
                        Click="BtnGuest_Click"/>

                <!-- Подсказка -->
                <TextBlock Text="Тестовые данные: admin@globus.ru / 7f8d2a" 
                           HorizontalAlignment="Center" Margin="0,15,0,0"
                           Foreground="Gray" FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>